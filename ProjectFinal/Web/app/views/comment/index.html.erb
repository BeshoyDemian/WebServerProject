<% end %>
</table>
</div>


<div class = "subjects new">
<h2 class="create">Create Comment</h2>
<%= form_for(:comment , :url => {:action => "create",:photo_id=>params[:photoid]}) do |f| %>
<%= render(:partial => "form", :locals => {:f => f}) %>


<div class ="from-buttons">
<%= submit_tag("Submit Comment", :class => "submt")%>
</div>
<%end%>
</div>

